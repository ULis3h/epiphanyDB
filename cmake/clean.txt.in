import os
# 此文件用于测试后清理生成的数据以及日志文件.
# 调用方法: $ python3 clean.py

test_directory = "@PROJECT_SOURCE_DIR@"

def delete_specified_files(directory, extensions):
    """
    删除指定目录及其子目录下所有指定扩展名的文件。
    
    :param directory: 要搜索的目录路径。
    :param extensions: 要删除的文件扩展名列表。
    """
    for root, dirs, files in os.walk(directory):
        for file in files:
            if any(file.endswith(ext) for ext in extensions):
                file_path = os.path.join(root, file)
                os.remove(file_path)
                print(f"Deleted: {file_path}")

# 使用示例
directory = "@PROJECT_SOURCE_DIR@"  
extensions = [".ELog", ".aed", ".log", ".edb"]
delete_specified_files(directory, extensions)